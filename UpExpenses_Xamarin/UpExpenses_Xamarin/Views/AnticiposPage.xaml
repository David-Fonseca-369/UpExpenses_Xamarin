                                            <VisualStateGroup x:Name="CommonStates">
                                                <VisualState x:Name="Normal">
                                                    <VisualState.Setters>
                                                        <Setter Property="Scale"
                                                                Value="1" />
                                                    </VisualState.Setters>
                                                </VisualState>

                                                <VisualState x:Name="Pressed">
                                                    <VisualState.Setters>
                                                        --><!--<Setter Property="Scale"
                                                                Value="0.8" />--><!--
                                                        <Setter Property="BackgroundColor" Value="Black"></Setter>
                                                        <Setter Property="TextColor" Value="White"></Setter>
                                                    </VisualState.Setters>
                                                </VisualState>

                                            </VisualStateGroup>
                                        </VisualStateManager.VisualStateGroups>
                                    </Button>-->
                                <!--</FlexLayout>-->
                                <!--<Button    Grid.Column="2" Grid.ColumnSpan="1" Grid.RowSpan="1" Grid.Row="2" Text="prueba"></Button>-->
                            </Grid>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
         
            <BoxView   VerticalOptions="Center"
           HorizontalOptions="Center"
           HeightRequest="1"
           WidthRequest="300"  
           Color="#5b5d68"></BoxView>
            <Label Text="Sistema de gastos" HorizontalTextAlignment="Center"></Label>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>